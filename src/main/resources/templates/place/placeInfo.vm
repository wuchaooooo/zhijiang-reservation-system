#set($layout='layout/blank.vm')
<div class="row">
    <div class="col-lg-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                #if($type eq "all")
                    所有场地列表
                #else
                    ${authUtils.getAuthUser().department}场地列表
                #end
            </div>
            <!-- /.panel-heading -->
            <div class="panel-body">
                <table width="100%" class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                    <tr>
                        <th>序号</th>
                        <th>场地名称</th>
                        <th>所属部门</th>
                        <th>负责人</th>
                        <th>联系方式</th>
                        <th>操作</th>
                    </tr>
                    </thead>
                    <tbody>
                        #set($i = 0)
                        #foreach($place in $placeList)
                            #set($i = $i + 1)
                        <tr class="odd gradeX">
                            <td>$i</td>
                            <td>$place.placeName</td>
                            <td>$place.department</td>
                            <td class="center">$place.principal</td>
                            <td class="center">$place.mobile</td>
                            <td>
                                <a type="button" class="btn btn-sm btn-primary" href="/reservations/index.html?placename=$place.placeName" target="_blank">借用情况</a>
                            </td>
                        </tr>
                        #end
                    </tbody>
                </table>
                <!-- /.table-responsive -->
            </div>
            <!-- /.panel-body -->
        </div>
        <!-- /.panel -->
    </div>
    <!-- /.col-lg-12 -->
</div>
<!-- /.row -->

